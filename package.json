{
  "name": "plasma.css",
  "version": "1.3.3",
  "author": "Betsy Dupuis",
  "license": "MIT",
  "bugs": "https://github.com/betsydupuis/plasma.css/issues?q=is%3Aopen+is%3Aissue+label%3Abug",
  "repository": {
    "type": "git",
    "url": "https://github.com/betsydupuis/plasma.css.git"
  },
  "description": "A robust, yet minimalist CSS grid framework based on Flexbox.",
  "homepage": "http://betsydupuis.github.io/plasma.css/",
  "main": "index.js",
  "scripts": {
    "mkdir:dist": "mkdir -p dist/assets/{css,templates,images}",
    "clean:dist": "rm -rf dist && npm run mkdir:dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "html:index": "cp src/index.html dist/index.html",
    "html": "npm-run-all html:index",
    "scss:plasma": "node-sass ./src/plasma/plasma.scss  ./dist/assets/css/plasma.css",
    "scss:docs": "node-sass ./src/docs/docs.scss  ./dist/assets/css/docs.css",
    "scss": "npm-run-all scss:plasma scss:docs",
    "scss2": "cat src/plasma/plasma.scss | node-sass --source-map > dist/css/plasma.css",
    "css": "npm-run-all scss",
    "beautify:css": "js-beautify --css --replace ./dist/css/plasma.css",
    "postcss": "postcss --use autoprefixer  --replace ./dist/assets/css/*.css",
    "build:dist": "npm-run-all clean:dist html css",
    "server": "http-server dist",
    "app:dev": "npm-run-all build:dist server",
    "start": "npm run app:dev",
    "predeploy": "npm install --force",
    "deploy": "git subtree push --prefix dist origin gh-pages"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "bootstrap-sass": "^3.3.7",
    "cssnano": "^3.10.0",
    "glob": "^7.1.2",
    "http-server": "^0.10.0",
    "js-beautify": "^1.6.14",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.3",
    "normalize.css": "^3.0.3",
    "npm-run-all": "^4.0.2",
    "postcss": "^6.0.5",
    "postcss-cli": "^4.1.0",
    "postcss-discard-comments": "^2.0.4",
    "postcss-import": "^10.0.0",
    "rimraf": "^2.6.1",
    "watch": "^1.0.2"
  },
  "dependencies": {},
  "keywords": [
    "plasma",
    "plasma.css",
    "flexbox",
    "css",
    "sass",
    "scss",
    "grid-layout",
    "grid-system",
    "grid-framework"
  ]
}
